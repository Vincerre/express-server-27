

<h2>Contact me</h2>
<form enctype="multipart/form-data" action="/contact/send-message" method="POST">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
   <label>
    Message: <textarea name="message"></textarea>
  </label>
  <label>
    File: <input type="file" name="image" accept=".png, .jpg, .jpeg, .gif">
  </label>
  <button type="submit">Send message</button>
</form>

{{#if isSent}}
    <div class=".isSent">
        <p>The message has been sent!</p>
        <p> The file {{ image }} has been saved!</p>
    </div>
{{/if}}

{{#if isError}}
<div class="isError">You can't leave fields empty!</div>
{{/if}}

